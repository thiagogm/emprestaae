# Production Environment
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=mysql://empresta_ae_user:empresta_ae_password@localhost:3306/empresta_ae
DB_HOST=localhost
DB_PORT=3306
DB_USER=empresta_ae_user
DB_PASSWORD=empresta_ae_password
DB_NAME=empresta_ae

# JWT Configuration
JWT_SECRET=empresta-ae-super-secret-jwt-key-production-2024-very-secure-32-chars-minimum
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=empresta-ae-super-secret-refresh-token-production-2024-very-secure-32-chars-minimum
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://empresta-ae.com,https://www.empresta-ae.com

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# AWS S3 Configuration (optional)
AWS_S3_BUCKET=empresta-ae-uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1