# Production Environment Variables

# Database
DB_ROOT_PASSWORD=your-super-secure-root-password
DB_USER=empresta_ae_user
DB_PASSWORD=your-super-secure-db-password
DB_NAME=empresta_ae

# Redis
REDIS_PASSWORD=your-super-secure-redis-password

# JWT
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long-for-production
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-at-least-32-characters-long-for-production

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# API URL
API_URL=https://api.yourdomain.com/api

# AWS S3 (for file storage)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# SSL Certificates (if using custom SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem